<% items.each do |item| %>
  <% next if item.deleted %>

  <a href="#"
     style="margin-left: <%= tab_space %>px"
     class="mt-5 mb-5 block p-6 bg-white rounded-lg border border-gray-200 shadow-md hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
    <h5 class="mb-2 text-sm font-bold tracking-tight text-gray-900 dark:text-white">
      <%= item.by %>
    </h5>
    <p class="mb-2 font-normal text-gray-700 dark:text-gray-400">
      <%= item.text %>
    </p>
    <p class="font-normal text-zinc-400 dark:text-gray-400">
      <%= time_ago_in_words(item.time) %>
    </p>
  </a>

  <%= render partial: 'comments', locals: { items: item.items, tab_space: tab_space + 50 } %>
<% end %>